<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaintenanceTool.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MaintenanceTool.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/DataTables/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body>

    <!-- Preloader -->
    <div class="loading-container">
        <div class="loading">
            <div class="l1">
                <div></div>
            </div>
            <div class="l2">
                <div></div>
            </div>
            <div class="l3">
                <div></div>
            </div>
            <div class="l4">
                <div></div>
            </div>
        </div>
    </div>
    <!-- Preloader -->

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-pink  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MaintenanceTool</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item d-flex flex-row-reverse">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="LogOut"> Welcome, @User.Identity.Name</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>

                            }


                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div style="display: none">
            @Html.Raw(TempData["alerts"])
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="container">
        <footer class="py-5">
            <div class="row">
                <div class="d-flex justify-content-between py-4 my-4 border-top">
                    <p>Danijel Boksan © 2024 - MaintenanceTool</p>
                </div>
            </div>
        </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/lib/DataTables/DataTables-1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        const Infoalerts = document.querySelectorAll(".infoAlert");
        Infoalerts.forEach((alert) => {
            toastr.info(alert.textContent);
        });
        const Successalerts = document.querySelectorAll(".successAlert");
        Successalerts.forEach((alert) => {
            toastr.success(alert.textContent);
        });
        const Warningsalerts = document.querySelectorAll(".warningAlert");
        Warningsalerts.forEach((alert) => {
            toastr.warning(alert.textContent);
        });
        const Erroralerts = document.querySelectorAll(".errorAlert");
        Erroralerts.forEach((alert) => {
            toastr.error(alert.textContent);
        });
    </script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>