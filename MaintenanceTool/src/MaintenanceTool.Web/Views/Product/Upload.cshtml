@model ProductImageViewModel

@{
    ViewData["Title"] = "Picture Upload";
}

<h2>Picture Upload</h2>

<form method="post" enctype="multipart/form-data">
    <div>
        <label for="file">Select Picture:</label>
        <input type="file" name="file" id="file" />
        <input type="submit" value="Upload" />
    </div>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div>
        @ViewBag.Message
    </div>
}

@if (Model != null && Model.PictureData != null)
{
    <div>
        <h3>Uploaded Picture:</h3>
        <img src="data:image;base64,@Convert.ToBase64String(Model.PictureData)" alt="Uploaded Picture" />
    </div>
}